// Geoptimo Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  brands        Brand[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Brand Profile
model Brand {
  id                String   @id @default(cuid())
  userId            String
  companyName       String
  website           String
  industry          String?
  description       String?  @db.Text
  targetAudience    String?  @db.Text
  uniqueValue       String?  @db.Text
  keywords          String[] @default([])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  competitors       Competitor[]
  prompts           Prompt[]
  citations         Citation[]
  contentPieces     ContentPiece[]
  auditReports      AuditReport[]
  metrics           Metric[]
}

// Competitors
model Competitor {
  id              String   @id @default(cuid())
  brandId         String
  name            String
  domain          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  brand           Brand             @relation(fields: [brandId], references: [id], onDelete: Cascade)
  metrics         CompetitorMetric[]
  
  @@unique([brandId, domain])
}

model CompetitorMetric {
  id                String     @id @default(cuid())
  competitorId      String
  visibilityScore   Int
  sentiment         Int
  topThreeVis       Int
  mentions          Int
  avgPosition       Float
  detectionRate     Int
  domainCitations   Int
  date              DateTime   @default(now())
  
  competitor        Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade)
}

// Prompts
model Prompt {
  id              String   @id @default(cuid())
  brandId         String
  text            String   @db.Text
  category        String?
  isSubscribed    Boolean  @default(false)
  isCustom        Boolean  @default(false)
  providers       String[] @default(["ChatGPT", "Claude", "Perplexity", "Gemini"])
  impressions     Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  brand           Brand          @relation(fields: [brandId], references: [id], onDelete: Cascade)
  results         PromptResult[]
}

model PromptResult {
  id              String   @id @default(cuid())
  promptId        String
  provider        String
  mentioned       Boolean
  position        Int?
  sentiment       String?
  response        String?  @db.Text
  citations       String[] @default([])
  runAt           DateTime @default(now())
  
  prompt          Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  
  @@index([promptId, runAt])
}

// Citations
model Citation {
  id              String   @id @default(cuid())
  brandId         String
  sourceUrl       String
  sourceTitle     String?
  sourceDomain    String
  domainAuthority Int      @default(0)
  snippet         String?  @db.Text
  providers       String[] @default([])
  citationCount   Int      @default(1)
  firstSeen       DateTime @default(now())
  lastSeen        DateTime @default(now())
  
  brand           Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  
  @@index([brandId, sourceDomain])
}

// Content Studio
model ContentPiece {
  id                  String   @id @default(cuid())
  brandId             String
  title               String
  content             String   @db.Text
  geoScore            Int      @default(0)
  citationLikelihood  Int      @default(0)
  readability         Int      @default(0)
  structure           Int      @default(0)
  entityCoverage      Int      @default(0)
  factualDensity      Int      @default(0)
  sourceQuality       Int      @default(0)
  status              String   @default("draft")
  publishedUrl        String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  brand               Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
}

// Website Audit
model AuditReport {
  id                  String   @id @default(cuid())
  brandId             String
  url                 String
  overallScore        Int
  citationLikelihood  Int
  readability         Int
  structure           Int
  entityCoverage      Int
  factualDensity      Int
  sourceQuality       Int
  issues              Json
  strengths           Json
  createdAt           DateTime @default(now())
  
  brand               Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  
  @@index([brandId, createdAt])
}

// Dashboard Metrics
model Metric {
  id                String   @id @default(cuid())
  brandId           String
  visibilityScore   Int
  sentiment         Int
  topThreeVis       Int
  mentions          Int
  avgPosition       Float
  detectionRate     Int
  domainCitations   Int
  date              DateTime @default(now())
  
  brand             Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  
  @@index([brandId, date])
}
